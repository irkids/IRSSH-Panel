# roles/protocols/templates/l2tp/options.xl2tpd.j2
ipcp-accept-local
ipcp-accept-remote
ms-dns {{ l2tp_dns_1 }}
ms-dns {{ l2tp_dns_2 }}
noccp
auth
crtscts
idle 1800
mtu 1280
mru 1280
nodefaultroute
debug
lock
proxyarp
connect-delay 5000
refuse-pap
refuse-chap
refuse-mschap
require-mschap-v2
persist
logfile /var/log/xl2tpd.log
name l2tpd
length bit
