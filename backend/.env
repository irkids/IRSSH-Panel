# Application
NODE_ENV=production
APP_PORT=443
APP_URL=https://panel.example.com

# Database
MONGODB_URI=mongodb://localhost:27017/irssh_prod
MONGODB_USER=admin
MONGODB_PASS=secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=redis_password

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
SESSION_SECRET=your_session_secret

# Protocols
SSH_PORT=22
L2TP_PORT=1701
IKEV2_PORT=500
WIREGUARD_PORT=51820
SINGBOX_PORT=443

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=smtp_password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/irssh/

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/panel.example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/panel.example.com/privkey.pem
