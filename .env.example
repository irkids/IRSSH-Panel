# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=irssh_panel
DB_USER=irssh_admin
DB_PASS=your_secure_password

# JWT Settings
SECRET_KEY=your_jwt_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Panel Settings
PANEL_DIR=/opt/irssh-panel
LOG_DIR=/var/log/irssh
BACKUP_DIR=/opt/irssh-panel/backups

# Module Settings
MODULES_DIR=/opt/irssh-panel/modules
DEFAULT_SSH_PORT=22
DEFAULT_L2TP_PORT=1701
DEFAULT_IKEV2_PORT=500
DEFAULT_CISCO_PORT=443
DEFAULT_WIREGUARD_PORT=51820
DEFAULT_SINGBOX_PORT=8388

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# SSL/TLS Settings (Optional)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Backup Settings
BACKUP_RETENTION_DAYS=7
MAX_BACKUPS=10
BACKUP_COMPRESSION=true

# Security Settings
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600  # 1 hour
