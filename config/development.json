{
  "app": {
    "port": 3000,
    "url": "http://localhost:3000"
  },
  "database": {
    "mongodb": {
      "uri": "mongodb://localhost:27017/irssh_dev"
    },
    "redis": {
      "host": "localhost",
      "port": 6379
    }
  },
  "logging": {
    "level": "debug",
    "format": "standard"
  },
  "security": {
    "jwtSecret": "dev_secret",
    "rateLimit": {
      "windowMs": 900000,
      "max": 1000
    }
  },
  "monitoring": {
    "enabled": true,
    "interval": 30000
  }
}
